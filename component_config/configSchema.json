{
    "type": "object",
    "title": "PowerBI Refresh Configuration",
    "required": [
        "workspace",
        "datasets"
    ],
    "properties": {
        "workspace": {
            "type": "string",
            "title": "PowerBI Workspace",
            "description": "Please leave this blank if user is trying to export into the signed-in account's workspace",
            "propertyOrder": 200,
            "default": ""
        },
        "datasets": {
            "type": "array",
            "title": "PowerBI Datasets",
            "propertyOrder": 300,
            "format": "table",
            "description": "Please enter the 'ID' of the dataset. *** Note: Not the 'Name' of the dataset ***",
            "uniqueItems": true,
            "items": {
                "title": "dataset",
                "required": [
                    "dataset_input"
                ],
                "properties": {
                    "dataset_input": {
                        "title": "Dataset ID",
                        "type": "string",
                        "minLength": 1
                    }
                }
            },
            "minItems": 1
        }
    }
}