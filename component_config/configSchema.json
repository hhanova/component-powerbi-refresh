{
    "type": "object",
    "title": "PowerBI Refresh Configuration",
    "required": [
        "workspace",
        "datasets"
    ],
    "properties": {
        "workspace": {
            "type": "string",
            "title": "PowerBI Workspace",
            "description": "Please leave this blank if user is trying to export into the signed-in account's workspace",
            "propertyOrder": 200,
            "default": ""
        },
        "datasets": {
            "type": "array",
            "title": "PowerBI Datasets",
            "propertyOrder": 300,
            "format": "table",
            "description": "Please enter the 'ID' of the dataset. *** Note: Not the 'Name' of the dataset ***",
            "uniqueItems": true,
            "items": {
                "title": "dataset",
                "required": [
                    "dataset_input"
                ],
                "properties": {
                    "dataset_input": {
                        "title": "Dataset ID",
                        "type": "string",
                        "minLength": 1
                    }
                }
            },
            "minItems": 1
        },
        "wait": {
            "enum": [
              "Yes",
              "No"
            ],
            "type": "string",
            "title": "Wait for end",
            "default": "No",
            "propertyOrder": 400
        },
        "alldatasets": {
            "enum": [
              "Yes",
              "No"
            ],
            "type": "string",
            "title": "Wait for all datasets",
            "default": "No",
            "propertyOrder": 450
        },
        "interval": {
            "type": "integer",
            "title": "Interval",
            "default": 30,
            "description": "seconds",
            "propertyOrder": 500
        },
        "timeout": {
            "type": "integer",
            "title": "Timeout",
            "default": 3600,
            "description": "seconds",
            "propertyOrder": 550
        }
    }
  }